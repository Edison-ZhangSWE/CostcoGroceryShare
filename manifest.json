{
  "manifest_version": 3,
  "name": "Costco Grocery Share",
  "version": "1.0",
  "description": "Share and split bulk grocery orders from Costco.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["*://www.costco.com/*"],
          "js": ["content.js"],
          "css": ["styles.css"]

      }
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
      }
  }
}